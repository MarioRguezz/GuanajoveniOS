<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Guanajoven.SetInfoIdioma">
	<ContentPage.Content>
		<Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Label Grid.Row="0" x:Name="_nombre" Text="IDIOMAS" HorizontalTextAlignment="Center" FontSize="20" Margin="0,20,0,0" />
			<ScrollView Grid.Row="1" x:Name="_scrollView" VerticalOptions="FillAndExpand">
				<!--CHECKS-->
			</ScrollView>
			<Button Grid.Row="2" x:Name="_continuar" Text="CONTINUAR" HorizontalOptions="FillAndExpand" Clicked="ContinuarClicked"/>
		</Grid>
	</ContentPage.Content>
</ContentPage>
