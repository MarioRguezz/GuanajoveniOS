<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Guanajoven.ChatViewCell">
	<ViewCell.View>
		<Grid>
			<Frame x:Name="_frame" HasShadow="false"  Padding="4" Margin="8" OutlineColor="#989898" WidthRequest="280">
			<StackLayout Spacing="5" Padding="10">
				<Label x:Name="_mensaje" HorizontalOptions="FillAndExpand" TextColor="White" HorizontalTextAlignment="Start" />
				<Label x:Name="_hora" HorizontalOptions="FillAndExpand" TextColor="White"  HorizontalTextAlignment="Start" FontAttributes="Bold"/>
			</StackLayout>
		</Frame>
		</Grid>
	</ViewCell.View>
</ViewCell>